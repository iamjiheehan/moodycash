datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Profile {
  id           String    @id @default(uuid()) @map("_id") @db.ObjectId
  clerkId      String    @unique
  firstName    String
  lastName     String
  username     String
  email        String
  profileImage String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  Service      Service[]
  Banking      Banking[]
}

model Service {
  id          String   @id @default(uuid()) @map("_id") @db.ObjectId
  date        DateTime
  description String
  mood        String
  price       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
}

model Banking {
  id                String   @id @default(uuid()) @map("_id") @db.ObjectId
  mood              String
  bankName          String
  bankAccountHolder String
  bankAccountNumber String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  profileId         String
  profile           Profile  @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
}
